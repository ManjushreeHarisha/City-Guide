<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_temples"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.avaneesh.cityguide.Temples">


    <ImageButton
        android:id="@+id/imageButtonKaduMalleshwara"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/kadu_malleshwara"
        android:onClick="gotoMalleshwara"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/temple"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageButton4"
        android:layout_marginEnd="17dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kadu Malleshwara"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:visibility="visible"
        android:layout_below="@+id/imageButtonKaduMalleshwara"
        android:layout_alignStart="@+id/imageButtonKaduMalleshwara" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageButtonKaduMalleshwara"
        android:layout_marginEnd="33dp"
        android:background="@drawable/gavi_gandharareshwara"
        android:elevation="0dp"
        android:onClick="gotoGavi"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/gavi_gandharareshwara" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gavi Gandhareshwara"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/imageButton5"
        android:background="@drawable/iskon"
        android:onClick="gotoIskon"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/iskon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISKON"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/imageButton2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginEnd="36dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:background="@drawable/basavanagudi"
        android:onClick="gotoBasava"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/basavanagudi" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basavana Gudi"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginEnd="11dp"
        android:layout_below="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton5" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_below="@+id/textView4"
        android:background="@drawable/shivagange"
        android:onClick="gotoShiva"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/shivagange" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shiva Gange"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginEnd="15dp" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/imageButton5"
        android:layout_below="@+id/textView5"
        android:background="@drawable/ragi_gudda"
        android:onClick="gotoRagi"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ragi_gudda" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/imageButton7"
        android:text="Ragi Gudda"
        android:textAppearance="@style/TextAppearance.AppCompat" />

</RelativeLayout>