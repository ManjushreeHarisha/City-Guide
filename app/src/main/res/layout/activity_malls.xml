<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_malls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.avaneesh.cityguide.Malls">

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:background="@drawable/forum"
        android:onClick="gotoForum"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/forum" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Forum"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:visibility="visible"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/imageButton8"
        android:layout_alignEnd="@+id/imageButton8"
        android:layout_marginEnd="29dp" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/imageButton8"
        android:background="@drawable/orien1"
        android:onClick="gotoOrion"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/orien1" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orion"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignEnd="@+id/imageButton9"
        android:layout_marginEnd="46dp" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/imageButton8"
        android:layout_below="@+id/textView13"
        android:background="@drawable/mantri"
        android:onClick="gotoMantri"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/mantri" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Mantri Square"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/imageButton10"
        android:layout_alignEnd="@+id/textView13" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/imageButton9"
        android:layout_alignTop="@+id/imageButton10"
        android:background="@drawable/garuda"
        android:onClick="commingSoon"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/garuda" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignEnd="@+id/imageButton11"
        android:layout_marginEnd="30dp"
        android:text="Garuda"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/imageButton10"
        android:layout_below="@+id/textView15"
        android:background="@drawable/elements"
        android:onClick="commingSoon"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/elements" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elements"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView13" />

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignEnd="@+id/imageButton11"
        android:layout_below="@+id/textView16"
        android:background="@drawable/phoenix"
        android:onClick="commingSoon"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/phoenix" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phoenix Market City"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageButton13" />
</RelativeLayout>
